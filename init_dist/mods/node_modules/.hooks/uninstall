#!/usr/bin/env node
var fs = require('fs'),
    path = require('path');
if(process.env.npm_package_screeps_mod) {
    var jsonFilename = path.resolve(__dirname,'../../mods.json');
    var json;
    try {
        json = JSON.parse(fs.readFileSync(jsonFilename, {encoding: 'utf8'}));
    }
    catch(e) {
        if(e.code == 'ENOENT') {
            json = {};
        }
        else {
            throw e;
        }
    }

    json.mods = json.mods || [];

    if(!process.env.npm_package_main) {
        console.error(`Module "${process.env.npm_package_name}" has no "main" defined`);
    }
    else {
        var newMods = [];
        var modMain = path.relative(path.dirname(jsonFilename), process.env.npm_package_main);
        json.mods.forEach(i => {
            if(i == modMain) {
                return;
            }
            newMods.push(i);
        });
        json.mods = newMods;
        fs.writeFileSync(jsonFilename, JSON.stringify(json, undefined, 2));
        console.log(`Screeps mod "${process.env.npm_package_name}" has been successfully removed`);
    }
}
